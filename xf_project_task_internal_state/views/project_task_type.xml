<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="task_type_form_internal_state" model="ir.ui.view">
        <field name="name">task_type_form_internal_state</field>
        <field name="model">project.task.type</field>
        <field name="inherit_id" ref="project.task_type_edit"/>
        <field name="arch" type="xml">
            <field name="fold" position="before">
                <field name="internal_state"/>
            </field>
        </field>
    </record>

    <record id="task_type_tree_internal_state" model="ir.ui.view">
        <field name="name">task_type_tree_internal_state</field>
        <field name="model">project.task.type</field>
        <field name="inherit_id" ref="project.task_type_tree"/>
        <field name="arch" type="xml">
            <field name="fold" position="before">
                <field name="internal_state"/>
            </field>
        </field>
    </record>



</odoo>